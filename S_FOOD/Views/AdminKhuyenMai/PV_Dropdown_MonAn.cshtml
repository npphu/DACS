@using S_FOOD.Models
@model List<MONAN>

<select name="IDMonAn" class="form-control form-control-static col-md-10" style="width:500px" required>
    @foreach (MONAN item in Model)
    {
        if (item == ViewBag.idLoai)
        {
            <option value="@item.ID_MonAn" selected>@item.TenMonAn</option>
        }
        else
        {
            <option value="@item.ID_MonAn">@item.TenMonAn</option>
        }
    }
</select>
