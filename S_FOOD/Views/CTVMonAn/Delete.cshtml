@model S_FOOD.Models.MONAN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutCTV.cshtml";
}

<h3 class="center">Bạn có chắc muốn xóa món ăn <a style="color:red">@Model.TenMonAn </a>?</h3>
<div class="center">
    <h4>THÔNG TIN  MÓN ĂN</h4>
    <hr />
    <table class="table table-bordered table-striped table-hover" style="font-size:14px">
        <tr class="center" style="vertical-align:middle">
            <th>Mã món ăn</th>
            <td>@Model.ID_MonAn</td>
        </tr>

        <tr>
            <th>Tên món ăn</th>
            <td>@Model.TenMonAn</td>
        </tr>

        <tr>
            <th style="vertical-align:middle">Ảnh</th>
            <td><img src="@Url.Content("~/images/MonAn/" + Model.AnhBia)" style="width:120px" /></td>
        </tr>

        <tr>
            <th>Giá bán</th>
            <td>@Model.GiaBan</td>
        </tr>

        <tr>
            <th>Số lượng tồn</th>
            <td>@Model.SoLuong</td>
        </tr>

        <tr>
            <th>Khu vực</th>
            <td>@Model.KHUVUC.TenKhuVuc</td>
        </tr>

        <tr>
            <th>Loại nữa ăn</th>
            <td>@Model.LOAIBUAAN.TenLoai</td>
        </tr>

        <tr>
            <th>Ngày cập nhật</th>
            <td>@Model.NgayCapNhap</td>
        </tr>

        <tr>
            <th>Người bán</th>
            <td>@Model.CONGTACVIEN.HoTen</td>
        </tr>

    </table>
    <table class="table table-bordered" style="font-size:14px">
        <tr class="center">
            <th>Mô tả</th>
            <td>@Model.MoTa</td>
        </tr>
    </table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions center">
        <input type="submit" value="Đồng ý xóa" class="btn btn-danger" />
        <button class="btn btn-primary">@Html.ActionLink("Về trang chủ", "Index")</button>
    </div>
}
</div>
