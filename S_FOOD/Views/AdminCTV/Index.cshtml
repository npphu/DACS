@model IEnumerable<S_FOOD.Models.CONGTACVIEN>

@{
    ViewBag.Title = "Cộng tác viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <button class="btn btn-warning">@Html.ActionLink("Thêm mới", "Create")</button> 
</p>
<table class="table table-bordered table-hover table-striped" style="font-size:14px">
    <thead style="background-color:orange">
        <tr>
            <th class="center">
                Họ tên
            </th>
            <th class="center">
                @Html.DisplayNameFor(model => model.CMND)
            </th>
            <th class="center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="center">
                Địa chỉ
            </th>
            <th class="center">
               Điện thoại
            </th>
            <th class="center">Tùy chọn</th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CMND)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoai)
                </td>
                
                <td class="center">
                    <button class=" btn btn-success">@Html.ActionLink("Sửa", "Edit", new { id = item.MaTK_CTV })</button>
                    <button class="btn btn-primary">@Html.ActionLink("Chi tiết", "Details", new { id = item.MaTK_CTV }) </button>
                    <button class="btn btn-danger">@Html.ActionLink("Xóa", "Delete", new { id = item.MaTK_CTV }) </button>
                </td>
            </tr>
        }

</table>
<h5 class="center text-error"> @ViewBag.ErrorBody</h5>
