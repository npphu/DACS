
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section class=" center">
    <div class=" row ">
        <div class="span12">
            <h4 class="title"><span class="text"><strong>ĐĂNG KÝ</strong> THÀNH VIÊN</span></h4>
            <form action="#" method="post" class="form-stacked">
                <fieldset>
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Tên đăng nhập:</label>
                        <div class="controls">
                            <input type="text" name="TenDangNhap" class="form-control form-control-static"  required autofocus>
                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Mật khẩu:</label>
                        <div class="controls">
                            <input type="password" name="MatKhau" class="form-control form-control-static"  required>

                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Nhập lại mật khẩu:</label>
                        <div class="controls">
                            <input type="password" name="NhapLaiMatKhau" class="form-control form-control-static"  required>
                            <h6 style="color:red; font-size:13px">
                                <td>
                                    @ViewData["Loi1"]
                                </td>
                            </h6>
                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Họ tên:</label>
                        <div class="controls">
                            <input type="text" name="HoTen" class="form-control form-control-static" required>
                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Giới tính:</label>
                        <select name="GioiTinh" class="form-control form-control-static"  required>
                            <option value="0">Nam</option>
                            <option value="1">Nữ</option>
                        </select>
                    </div>                    
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Điện thoại:</label>
                        <div class="controls">
                            <input type="number" name="DienThoai" class="form-control form-control-static"  required>
                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Email:</label>
                        <div class="controls">
                            <input type="email" name="Email" class="form-control form-control-static"  required>
                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom:17px">
                        <label class="control-label">Địa chỉ:</label>
                        <div class="controls">
                            <input type="text" name="DiaChi" class="form-control form-control-static" placeholder="Số nhà, Tên đường, Phường, Quận" required>
                        </div>
                    </div>
                    <hr>
                    <div class="actions">
                        <input tabindex="6" class="btn btn-warning" type="submit" value="Đăng ký">
                        <button class="btn btn-success" type="submit">@Html.ActionLink("Đăng nhập", "DangNhap", "NguoiDung")</button>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>
</section>


